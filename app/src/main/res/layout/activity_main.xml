<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sqhan.artwork.activity.MainActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="打开第二个页面" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="打开SimpleServiceActivity页面"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="打开BindServiceActivity页面"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="打开ForegroundServiceActivity页面"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/open_leak_canary_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="打开LeakCanaryTestActivity页面"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/butter_knife_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="ButterKnife测试" />

    <Button
        android:id="@+id/main_open_a_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTop测试，打开A页面" />


</LinearLayout>
